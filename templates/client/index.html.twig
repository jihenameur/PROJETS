{% extends 'base2.html.twig' %}

{% block title %}Client {% endblock %}

{% block body %}
    <h1>Client </h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomCLI</th>
                <th>PrenomCLI</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for client in clients %}
            <tr>
                <td>{{ client.id }}</td>
                <td>{{ client.nomCLI }}</td>
                <td>{{ client.prenomCLI }}</td>
                <td>{{ client.email }}</td>
                <td>
                    <a href="{{ path('client_show', {'id': client.id}) }}">show</a>
                    <a href="{{ path('client_edit', {'id': client.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('client_new') }}">Create new</a>
{% endblock %}
